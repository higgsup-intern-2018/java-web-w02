<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Student Management</display-name>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>com.higgsup.intern.w02.controller.StudentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EnrollmentController</servlet-name>
        <servlet-class>com.higgsup.intern.w02.controller.EnrollmentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EnrollmentController</servlet-name>
        <url-pattern>/enrollment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentInfo</servlet-name>
        <servlet-class>com.higgsup.intern.w02.controller.StudentInfoController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentInfo</servlet-name>
        <url-pattern>/student-info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClassroomInfo</servlet-name>
        <servlet-class>com.higgsup.intern.w02.controller.ClassroomInfoController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClassroomInfo</servlet-name>
        <url-pattern>/classroom</url-pattern>
    </servlet-mapping>
</web-app>